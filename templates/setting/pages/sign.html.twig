{% extends 'setting/login.html.twig' %}

{% block body %}
<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="login-wrapper">
			        <div class="box">
			            <div class="content-wrap">
			                <h6>Sign Up</h6>
							<form method="POST" action="{{ path('signup_setting') }}" >
								<input class="form-control" name="nom" type="text" placeholder="Nom d'auteur">
								<input class="form-control" name="mail" type="text" placeholder="E-mail address">
								<input class="form-control" name="pass" type="password" placeholder="Password">
								<input class="form-control" name="word" type="password" placeholder="Confirm Password">
								<div class="action">
									<button type="submit" class="btn btn-primary signup" >
										Sign Up
									</button>
								</div>       
							</form>         
			            </div>
			        </div>

			        <div class="already">
			            <p>Have an account already?</p>
			            <a href="{{ path('index_setting')}}">Login</a>
			        </div>
			    </div>
			</div>
		</div>
{% endblock %}