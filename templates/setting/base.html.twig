<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Setting{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- jQuery UI -->
        <link href="{{ asset('assets/css/jquery-ui.min.css')}}" rel="stylesheet" media="screen">

        <!-- Bootstrap -->
        <link href="{{ asset('assets/css/bootstrap.min.css')}}" rel="stylesheet">
        <!-- styles -->
        <link href="{{ asset('assets/css/styles.css')}}" rel="stylesheet">

        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <!-- pageheader
        ================================================== -->
        {{ include("setting/fragments/header.html.twig") }}
        <!-- end s-pageheader -->
        
        <!-- s-content
        ================================================== -->
        <div class="page-content">
            <div class="row">
                <div class="col-md-2">
                {{ include("setting/fragments/menu.html.twig") }}

                {% block action %}{% endblock %}

                </div>
                <div class="col-md-10">
                {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        <!-- s-content -->

        <!-- s-footer
        ================================================== -->
        {{ include("setting/fragments/footer.html.twig") }}
        <!-- end s-footer -->

       <!-- Java Script
        ================================================== -->
        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="{{ asset('assets/js/jquery.js')}}"></script>
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        <script src="{{ asset('assets/js/bootstrap.min.js')}}"></script>
        <script src="{{ asset('assets/js/custom.js') }} "></script>

        {% block javascripts %}{% endblock %}
    </body>
</html>
